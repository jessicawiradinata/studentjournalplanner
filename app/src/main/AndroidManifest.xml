<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jessica.studentjournalplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FireApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".BrowseActivity"
            android:label="Browse Events" />
        <activity android:name=".CreateEventActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventDetailActivity"
            android:label="Event Details" />
        <activity
            android:name=".ViewEventActivity"
            android:label="My Events" />
        <activity
            android:name=".CreateAssignmentActivity"
            android:label="Create Assignment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyAssignmentActivity"
            android:label="My Assignments" />
        <activity
            android:name=".AssignmentHistoryActivity"
            android:label="Assignments History" />
        <activity
            android:name=".AssignmentDetailActivity"
            android:label="Assignment Details" />
        <activity
            android:name=".EventHistoryActivity"
            android:label="Events History" />
        <activity
            android:name=".MyJournalActivity"
            android:label="My Journal" />
        <activity android:name=".EventDetail2Activity"></activity>
    </application>

</manifest>